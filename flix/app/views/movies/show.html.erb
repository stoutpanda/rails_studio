
  <article>
    <header>
      <h2><%= @movie.title %></h2>
    </header>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(@movie) %></td>
      </tr>
      <tr>
        <td> <%= link_to( "All Movies", movies_path ) %>  </td>
      </tr>
    </table>
  </article>
