
  <article>
    <header>
      <h2><%= @movie.title %></h2>
    </header>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Released:</th>
        <td><%= @movie.released_on %></td>
      </tr>
      <tr>
        <th>Rating:</th>
        <td><%= @movie.rating %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= format_total_gross(@movie) %></td>
      </tr>
      <tr><td><br></td></tr>

    </table>
    <nav>
     <%= link_to( "All Movies", movies_path) %> |
     <%= link_to("Edit", edit_movie_path) %>  |
      <%= link_to( "Delete", movie_path(@movie), method: :delete, data: { confirm: "Deleting #{@movie.title}, are you sure?"}) %>
    </nav>
  </article>
<%= render 'footer' %>
